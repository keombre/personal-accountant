@page
@model PersonalAccountant.Areas.Transactions.Pages.Types.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="TypeEntity.Id" />
            <div class="form-group">
                <label asp-for="TypeEntity.Name" class="control-label"></label>
                <input asp-for="TypeEntity.Name" class="form-control" />
                <span asp-validation-for="TypeEntity.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TypeEntity.ColorHex" class="control-label"></label>
                <input type="color" asp-for="TypeEntity.ColorHex" class="custom-select" />
                <span asp-validation-for="TypeEntity.ColorHex" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
